@model FEENALOoFINALE.Models.FailurePrediction

@{
    ViewData["Title"] = "Delete Prediction";
}

<h1>Delete Prediction</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this prediction?</h3>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Failure Prediction for @Model.Equipment?.EquipmentType?.EquipmentTypeName</h5>
        <dl class="row">
            <dt class="col-sm-2">
                Equipment
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipment.EquipmentType.EquipmentTypeName)
            </dd>

            <dt class="col-sm-3">Predicted Failure Date</dt>
            <dd class="col-sm-9">@Model.PredictedFailureDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Confidence Level</dt>
            <dd class="col-sm-9">@Model.ConfidenceLevel%</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PredictionId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>