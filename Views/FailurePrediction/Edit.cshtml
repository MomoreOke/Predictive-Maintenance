@model FEENALOoFINALE.Models.FailurePrediction

@{
    ViewData["Title"] = "Edit Prediction";
}

<h1>Edit Prediction</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PredictionId" />
            
            <div class="form-group">
                <label asp-for="EquipmentId" class="control-label">Equipment</label>
                <select asp-for="EquipmentId" class="form-control" 
                        asp-items="@(new SelectList(ViewBag.Equipment, "EquipmentId", "Name"))">
                </select>
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PredictedFailureDate" class="control-label">Predicted Failure Date</label>
                <input asp-for="PredictedFailureDate" class="form-control" type="date" />
                <span asp-validation-for="PredictedFailureDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfidenceLevel" class="control-label">Confidence Level (%)</label>
                <input asp-for="ConfidenceLevel" class="form-control" type="number" min="0" max="100" />
                <span asp-validation-for="ConfidenceLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<PredictionStatus>()">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AnalysisNotes" class="control-label">Analysis Notes</label>
                <textarea asp-for="AnalysisNotes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AnalysisNotes" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}