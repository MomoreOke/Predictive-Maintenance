@model FEENALOoFINALE.Models.Equipment

@{
    ViewData["Title"] = "Delete Equipment";
}

<h1>Delete Equipment</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this equipment?</h3>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EquipmentId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>