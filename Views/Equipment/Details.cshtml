@using FEENALOoFINALE.Models
@model FEENALOoFINALE.Models.Equipment

@{
    ViewData["Title"] = "Equipment Details";
}

<h1>Equipment Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@(Model.EquipmentType?.EquipmentTypeName ?? "N/A") - @(Model.EquipmentModel?.ModelName ?? "N/A")</h5>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Equipment Type</dt>
                    <dd class="col-sm-8">@(Model.EquipmentType?.EquipmentTypeName ?? "N/A")</dd>

                    <dt class="col-sm-4">Equipment Model</dt>
                    <dd class="col-sm-8">@(Model.EquipmentModel?.ModelName ?? "N/A")</dd>

                    <dt class="col-sm-4">Building</dt>
                    <dd class="col-sm-8">@(Model.Building?.BuildingName ?? "N/A")</dd>

                    <dt class="col-sm-4">Room</dt>
                    <dd class="col-sm-8">@(Model.Room?.RoomName ?? "N/A")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InstallationDate)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.InstallationDate)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ExpectedLifespanMonths)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ExpectedLifespanMonths) months</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Notes)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.EquipmentId" class="btn btn-warning">Edit</a>
    <a asp-action="MaintenanceHistory" asp-route-id="@Model.EquipmentId" class="btn btn-info">Maintenance History</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>