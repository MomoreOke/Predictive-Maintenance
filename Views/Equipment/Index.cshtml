@using FEENALOoFINALE.Models
@model IEnumerable<FEENALOoFINALE.Models.Equipment>

@{
    ViewData["Title"] = "Equipment List";
}

<h1>Equipment Management</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Equipment</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@(Model.Any() && Model.First().EquipmentType != null ? Html.DisplayNameFor(model => model.First().EquipmentType.EquipmentTypeName) : "Equipment Type")</th>
            <th>@(Model.Any() && Model.First().EquipmentModel != null ? Html.DisplayNameFor(model => model.First().EquipmentModel.ModelName) : "Model")</th> 
            <th>@(Model.Any() && Model.First().Building != null ? Html.DisplayNameFor(model => model.First().Building.BuildingName) : "Building")</th>
            <th>@(Model.Any() && Model.First().Room != null ? Html.DisplayNameFor(model => model.First().Room.RoomName) : "Room")</th>
            <th>@(Model.Any() ? Html.DisplayNameFor(model => model.First().Status) : "Status")</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.EquipmentType?.EquipmentTypeName ?? "N/A")</td>
                <td>@(item.EquipmentModel?.ModelName ?? "N/A")</td>
                <td>@(item.Building?.BuildingName ?? "N/A")</td>
                <td>@(item.Room?.RoomName ?? "N/A")</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EquipmentId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="MaintenanceHistory" asp-route-id="@item.EquipmentId" class="btn btn-secondary btn-sm">Maintenance</a>
                </td>
            </tr>
        }
    </tbody>
</table>