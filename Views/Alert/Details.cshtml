@model FEENALOoFINALE.Models.Alert

@{
    ViewData["Title"] = "Alert Details";
}

<h1>Alert Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <dl class="row">
            <dt class="col-sm-3">Equipment</dt>
            <dd class="col-sm-9">@Model.Equipment?.EquipmentType?.EquipmentTypeName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">@Model.Priority</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Assigned To</dt>
            <dd class="col-sm-9">@(Model.AssignedTo?.FullName ?? "Unassigned")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.AlertId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>