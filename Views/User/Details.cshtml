@model FEENALOoFINALE.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role</dd>

            <dt class="col-sm-3">Contact Number</dt>
            <dd class="col-sm-9">@Model.ContactNumber</dd>
        </dl>

        @if (Model.AssignedAlerts?.Any() == true)
        {
            <h6 class="mt-4">Assigned Alerts</h6>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var alert in Model.AssignedAlerts.OrderByDescending(a => a.CreatedDate))
                    {
                        <tr>
                            <td>@alert.Title</td>
                            <td>@alert.Priority</td>
                            <td>@alert.Status</td>
                            <td>@alert.CreatedDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>