@model FEENALOoFINALE.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role</dd>

            <dt class="col-sm-3">Contact Number</dt>
            <dd class="col-sm-9">@Model.ContactNumber</dd>
        </dl>

        @* Removed invalid AssignedAlerts section *@
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>